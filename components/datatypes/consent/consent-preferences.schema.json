      "description": "Reason for opting out",
      "maxLength": 16,
      "meta:titleId": "consents-and-preferences##reason##title##71191",
      "meta:descriptionId": "consents-and-preferences##reason##description##4891"
    },
    "subscriptions": {
      "title": "Subscriptions",
      "description": "A set of notifications, newsletters, etc. to which the user subscribes",
      "type": "object",
      "meta:xdmType": "map",
      "additionalProperties": {
        "type": "object",
