  "$id": "https://ns.adobe.com/xdm/common/descriptors/labeldescriptor",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Label Descriptor",
  "meta:extensible": true,
  "meta:extends": [
    "https://ns.adobe.com/xdm/common/descriptors/schemadescriptor#/definitions/descriptor"
  ],
  "meta:abstract": false,
  "type": "object",
  "description": "A descriptor that describes a label for a field in the given sourceSchema that can be of type class, mixin or schema",
  "definitions" : {
    "labeldescriptor" : {
      "properties" : {
        "xdm:labels": {
          "title": "Labels",
          "description": "When present, it allows an array of objects with three properties such as labelType, labelName and labelValue",
          "type": "array",
          "items": {
            "type": "object",
            "meta:xdmType": "object",
            "required": [
              "labelType",
              "labelName",
              "labelValue"
            ],
            "properties": {
              "labelType": {
                "type": "string"
              },
              "labelName": {
                "type": "string"
              },
              "labelValue": {
                "type": "string"
              }
            }
          },
          "meta:xdmType": "array"
        }
      },
      "oneOf" : [
        {
          "required" : [
            "xdm:labels"
          ]
        },
        {
          "required" : [
            "xdm:sourceProperty"
          ]
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "https://ns.adobe.com/xdm/common/descriptors/schemadescriptor#/definitions/descriptor"
    },
    {
      "$ref": "#/definitions/labeldescriptor"
    }
  ],
  "meta:status": "stable",
  "meta:createdDate": "2021-06-10"
}
